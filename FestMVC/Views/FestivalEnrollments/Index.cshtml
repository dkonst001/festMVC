@model IEnumerable<FestMVC.Models.FestivalEnrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Enrollments To Festivals</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Add Enrollment to Festival", "Create", new { }, new { @class = "btn btn-success" })
    }
</p>

<div class="table-responsive">

    <table class="table">
        <thead>
            <tr>
                @if (User.IsInRole("Admin"))
            {
                    <th>
                        @Html.DisplayNameFor(model => model.User.Name)
                    </th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.Festival.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumOfTickets)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    @if (User.IsInRole("Admin"))
                {
                        <td data-label="User Name">
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                    }
                    <td data-label="Festival Name">
                        @Html.DisplayFor(modelItem => item.Festival.Name)
                    </td>
                    <td data-label="Number Of Tickets">
                        @Html.DisplayFor(modelItem => item.NumOfTickets)
                    </td>

                    <td>

                        <div class="btn-group">
                            <button type="button" class="btn btn-success">Action</button>
                            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Register Events", "FestivalEvents", "Festivals", new { id = item.FestivalId }, new { })</li>
                                <li>@Html.ActionLink("My Events", "UserFestivalIndex", "Enrollments", new { id = item.FestivalId }, new { })</li>
                                <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                                @*<li class="divider"></li>*@
                                <li>@Html.ActionLink("Remove", "Delete", new { id = item.Id })</li>
                            </ul>
                        </div>



                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Register Events", "FestivalEvents", "Festivals", new { id = item.FestivalId }, new { @class = "btn btn-info glyphicon glyphicon-plus", @style = "color:white" }) |
                            @Html.ActionLink("My Events", "UserFestivalIndex", "Enrollments", new { id = item.FestivalId }, new { @class = "btn btn-info glyphicon glyphicon-list", @style = "color:white" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info glyphicon glyphicon-info-sign", @style = "color:white" }) |
                            @Html.ActionLink("Remove", "Delete", new { id = item.Id }, new { @class = "btn btn-info glyphicon glyphicon-trash", @style = "color:white" })*@

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
