@model IEnumerable<FestMVC.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}


<h2>Events Enrollments</h2>

@if (User.IsInRole("Admin"))
{
    @Html.ActionLink("Add Enrollment to Event", "Create", new { }, new { @class = "btn btn-success" })
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>

                @if (User.IsInRole("Admin"))
            {
                    <th>
                        @Html.DisplayNameFor(model => model.User.Name)
                    </th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.Event.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumOfTickets)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    @if (User.IsInRole("Admin"))
                {
                        <td data-label="User Name">
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                    }
                    <td data-label="Event Name">
                        @Html.DisplayFor(modelItem => item.Event.Name)
                    </td>
                    <td data-label="Number Of Tickets">
                        @Html.DisplayFor(modelItem => item.NumOfTickets)
                    </td>

                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-success">Action</button>
                            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                                <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                                @*<li class="divider"></li>*@
                                <li>@Html.ActionLink("Remove", "Delete", new { id = item.Id })</li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
