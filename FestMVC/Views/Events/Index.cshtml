<p>
    @Html.ActionLink(" ", "Create",new { }, new { @class = "btn btn-info btn-circle btn-lg glyphicon glyphicon-plus", @style = "color:white" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Festival.Name)
