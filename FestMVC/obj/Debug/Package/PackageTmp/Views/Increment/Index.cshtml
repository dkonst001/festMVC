                    @Html.DisplayFor(model => model.Incremented, new { htmlAttributes = new { @class = "form-control text-danger" } })
                    @*Html.ValidationMessageFor(model => model.Incremented, "", new { @class = "text-danger" })
                </div>
            </div>
        *@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

@section scripts{
